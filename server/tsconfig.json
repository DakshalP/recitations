{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./",
        "paths": {
            "@interfaces/*": ["../common/interfaces/*"],
            "@models/*": ["../common/models/*"],
            "@controllers/*": ["library/controllers/*"],
